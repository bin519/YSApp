<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <CheckBox
        android:id="@+id/chk_drug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
         />

    <ImageView
        android:id="@+id/paycar_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/xyz"
        android:layout_toRightOf="@+id/chk_drug" />

    <TextView
        android:id="@+id/tv_drug_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/paycar_image"
        android:layout_alignTop="@+id/chk_drug"
        android:layout_centerHorizontal="true"
        android:text="药品名" />

    <TextView
        android:id="@+id/tv_drug_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/paycar_image"
        android:layout_alignBottom="@+id/chk_drug"
        android:layout_alignLeft="@+id/tv_drug_name"
        android:text="药品价格" />
    <Button
        android:id="@+id/btn_sub"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_add"
        android:layout_alignBaseline="@+id/chk_drug"
        android:layout_toLeftOf="@+id/tv_count"
        android:textScaleX="1.8"
        android:text="-" 
        />
    <EditText 
        android:id="@+id/tv_count"
        android:layout_width="45dp"
        android:singleLine="true"
        android:maxWidth="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_alignBottom="@+id/chk_drug"
        android:layout_toLeftOf="@+id/btn_add"
        />
   <Button
        android:id="@+id/btn_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_drug_desc"
        android:layout_alignBaseline="@+id/chk_drug"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="+" />

  
   <TextView 
       android:id="@+id/tv_store_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="180dp"
       android:layout_marginTop="18dp"
       android:textSize="15sp"
       android:text="大少天猫旗舰店"
       />
</RelativeLayout>
